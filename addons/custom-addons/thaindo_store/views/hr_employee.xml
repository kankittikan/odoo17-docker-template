<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">view.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <field name="mobile_phone" position="before">
                <field name="nickname" />
            </field>
            <field name="mobile_phone" position="attributes">
                <attribute name="string">โทรศัพท์มือถือ</attribute>
            </field>
        </field>
    </record>

    <record id="hr_kanban_view_employees" model="ir.ui.view">
        <field name="name">hr.employee.kanban.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <span t-if="record.nickname.raw_value"> (<field name="nickname" />)</span>
            </field>
        </field>
    </record>
</odoo>