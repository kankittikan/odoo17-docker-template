<odoo>
    <data>
        <record model="ir.ui.view" id="product_request_form">
            <field name="name">product_request_form</field>
            <field name="model">product.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_validate" string="ยืนยัน" class="btn-primary"
                            type="object" invisible="state != 'draft'" confirm="ยืนยันทำรายการ" />
                        <button name="action_cancel" string="ยกเลิก" type="object"
                            invisible="state != 'draft'" confirm="ยืนยันยกเลิก" />
                        <button name="print_report" string="แสดงใบเบิก" type="object"
                            invisible="state != 'approve'" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,to_approve,approve,cancel" />
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                        <hr />
                        <group>
                            <group>
                                <field name="user_id" readonly="1" />
                                <field name="datetime" required="1" readonly="state != 'draft'"/>
                                <field name="purpose" required="1" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="doc_ref" placeholder="XX-00001" readonly="state != 'draft'"/>
                                <field name="department_id" required="1" readonly="state != 'draft'" options="{'no_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="note" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="รายการเบิก">
                                <field name="line_ids" readonly="state != 'draft'">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create':True,'no_create_edit':True,'no_open': True}" />
                                        <field name="categ_id" />
                                        <field name="qty" />
                                        <field name="uom_id" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="product_request_tree">
            <field name="name">product_request_tree</field>
            <field name="model">product.request</field>
            <field name="arch" type="xml">
                <tree default_order="datetime desc">
                    <field name="name" />
                    <field name="user_id" />
                    <field name="datetime" />
                    <field name="department_id" />
                    <field name="state" widget="badge"
                        decoration-success="state == 'approve'"
                        decoration-warning="state == 'to_approve'"
                        decoration-danger="state == 'cancel'" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="product_request_search">
            <field name="name">product_request_search</field>
            <field name="model">product.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter name="group_department_id" string="แผนก" context="{'group_by':'department_id'}"/>       
                </search>
            </field>
        </record>

        <record id="action_product_request" model="ir.actions.act_window">
            <field name="name">รายการเบิก</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_product_request" parent="stock.menu_stock_root"
            action="action_product_request" sequence="0" />
    </data>
</odoo>