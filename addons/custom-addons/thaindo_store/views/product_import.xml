<odoo>
    <data>
        <record model="ir.ui.view" id="product_import_form">
            <field name="name">product_import_form</field>
            <field name="model">product.import</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_validate" string="ยืนยัน" class="btn-primary"
                            type="object" invisible="state != 'draft'" confirm="ยืนยันทำรายการ"/>
                        <button name="action_cancel" string="ยกเลิก" type="object" invisible="state != 'draft'" confirm="ยืนยันยกเลิก"/>
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,to_approve,approve,cancel" />
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                        <hr />
                        <group>
                            <group>
                                <field name="user_id" readonly="1" />
                                <field name="datetime" required="1" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="doc_ref" placeholder="PO-00001" readonly="state != 'draft'"/>
                                <field name="note" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="รายการนำเข้า">
                                <field name="line_ids" readonly="state != 'draft'">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create':True,'no_create_edit':True,'no_open': True}"/>
                                        <field name="categ_id"/>
                                        <field name="qty"/>
                                        <field name="uom_id"/>
                                        <field name="price"/>   
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="product_import_tree">
            <field name="name">product_import_tree</field>
            <field name="model">product.import</field>
            <field name="arch" type="xml">
                <tree default_order="datetime desc">
                    <field name="name" />
                    <field name="user_id"/>
                    <field name="datetime"/>
                    <field name="state" widget="badge"
                        decoration-success="state == 'approve'"
                        decoration-warning="state == 'to_approve'" 
                        decoration-danger="state == 'cancel'"/>
                </tree>
            </field>
        </record>

        <record id="action_product_import" model="ir.actions.act_window">
            <field name="name">รายการนำเข้า</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.import</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_product_import" parent="stock.menu_stock_root"
            action="action_product_import" sequence="1" />
    </data>
</odoo>