<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="auto_remove_old_preview_attachment" model="ir.cron">
            <field name="name">Base: Auto remove old previewer attachment</field>
            <field name="model_id" ref="model_pdf_previewer" />
            <field name="state">code</field>
            <field name="code">model.remove_old_attachment()</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=18, minute=0, second=0)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="numbercall">-1</field>
            <field name="user_id" ref="base.user_root" />
        </record>
    </data>
</odoo>